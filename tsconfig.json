{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "allowJs": false,
    "outDir": "./dist",
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts",
    "tests/*.spec.ts",
    "tests/**/*.spec.ts"
  ],
  "exclude": ["node_modules"]
}
